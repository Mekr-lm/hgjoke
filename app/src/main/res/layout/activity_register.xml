<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2f2f2"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="注册"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/text_size_24" />
    <EditText
        android:id="@+id/et_lg_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input"
        android:hint="请输入用户昵称"
        android:inputType="number"
        android:maxLength="8"
        android:padding="12dp"
        android:textColor="@color/c_666666"
        android:textColorHint="@color/c_999999"
        android:textSize="@dimen/text_size_14" />

    <EditText
        android:id="@+id/et_lg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input"
        android:hint="输入登录密码"
        android:inputType="textPassword"
        android:maxLength="25"
        android:padding="12dp"
        android:textColor="@color/c_666666"
        android:textColorHint="@color/c_999999"
        android:textSize="@dimen/text_size_14" />
    <Button
        android:id="@+id/btn_lg_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_bg_1"
        android:onClick="onClick"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />


</LinearLayout>
