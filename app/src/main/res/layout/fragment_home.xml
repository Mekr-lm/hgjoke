<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <LinearLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:background="@color/c_f00056"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/iv_home_title_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/ic_title_bottom"
            android:padding="12dp"
            android:text="深圳市"
            android:textColor="@color/white" />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/iv_home_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/bg_sousuo_"
            android:drawableLeft="@mipmap/ic_home_search"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="10dp"
            android:text="请输入需要的服务"
            android:textColor="@color/c_aaaaaa" />
        <ImageView
            android:id="@+id/iv_home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:src="@mipmap/ic_home_add" />
    </LinearLayout>
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <com.youth.banner.Banner
                   android:id="@+id/bn_home_top"
                   android:layout_width="match_parent"
                   android:layout_height="160dp"/>
               <RelativeLayout
                   android:layout_marginTop="10dp"
                   android:id="@+id/rl_title1"
                   android:layout_width="match_parent"
                   android:layout_height="210dp"
                   android:background="@color/white">
                   <GridView
                       android:layout_marginTop="10dp"
                       android:id="@+id/grid_icon_view"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:columnWidth="90dp"
                       android:gravity="center"
                       android:horizontalSpacing="@dimen/text_size_10"
                       android:numColumns="5"
                       android:stretchMode="columnWidth"
                       android:verticalSpacing="@dimen/text_size_10" />
               </RelativeLayout>
               <TextView
                   android:layout_below="@+id/rl_title1"
                   android:id="@+id/tv_title2"
                   android:layout_marginTop="10dp"
                   android:padding="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="16dp"
                   android:textColor="@color/black"
                   android:background="@color/white"
                   android:text="服务推荐"/>
               <RelativeLayout
                   android:layout_below="@+id/tv_title2"
                   android:id="@+id/rl_title3"
                   android:background="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp">
                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rv_home_list"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>
               <TextView
                   android:background="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="需求推荐"
                   android:padding="20dp"
                   android:textColor="@color/black"
                   android:textSize="16dp"/>
               <com.jcodecraeer.xrecyclerview.XRecyclerView
                   android:id="@+id/rv_server_list"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
           </LinearLayout>
       </ScrollView>
</LinearLayout>